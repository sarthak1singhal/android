<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Profile_F"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elysion.elysion.Profile.Profile_F">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="24dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/white"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/d_bottom_gray_line">

                <ImageButton
                    android:id="@+id/back_btn"
                    android:layout_width="50dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@color/transparent"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_back"
                    android:tint="@color/black" />


                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="UserName"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <ImageButton
                    android:id="@+id/setting_btn"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_send_black" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants">

                <LinearLayout
                    android:id="@+id/top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">


                        <RelativeLayout
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="25dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/user_image"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/profile_image_placeholder"
                                app:civ_border_color="@color/black"
                                app:civ_border_width="1.5dp"
                                app:civ_circle_background_color="@color/white" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/varified_btn"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:src="@drawable/ic_tic"
                                android:visibility="visible"
                                app:civ_border_width="1.5dp"
                                app:civ_circle_background_color="@color/black" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/uname"
                                android:layout_width="260dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="18dp"
                                android:layout_marginTop="31dp"
                                android:layout_marginEnd="18dp"
                                android:fontFamily="@font/itc_avant_garde_regular"
                                android:text="UserName"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/username2_txt"
                                android:layout_width="260dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="18dp"
                                android:layout_marginTop="31dp"
                                android:layout_marginEnd="18dp"
                                android:fontFamily="@font/itc_avant_garde_regular"
                                android:text="UserName"
                                android:textColor="@color/black"
                                android:textSize="21sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/bio"
                                android:layout_width="260dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/username2_txt"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="18dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="16dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15dp" />
                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/follow_unfollow_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/d_round_black5"
                            android:fontFamily="@font/itc_avant_garde_regular"
                            android:gravity="center"
                            android:paddingStart="5dp"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="5dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:shadowRadius="2"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textNormalSize"
                            android:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/fans_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:padding="10dp"
                                android:text="Followers"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textNormalSize" />

                            <TextView
                                android:id="@+id/fan_count_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:paddingLeft="15dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/countTextSize" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/following_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:padding="10dp"
                                android:text="Following"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textNormalSize" />

                            <TextView
                                android:id="@+id/follow_count_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:paddingLeft="15dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/countTextSize" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:padding="10dp"
                                android:text="Videos"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textNormalSize" />


                            <TextView
                                android:id="@+id/video_count_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:paddingLeft="15dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/countTextSize" />


                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/gainsboro" />

                </LinearLayout>


                <!-- <com.google.android.material.tabs.TabLayout
                     android:id="@+id/tabs"
                     android:layout_width="match_parent"
                     android:layout_height="48dp"
                     android:layout_alignParentTop="true"
                     android:layout_weight="1"
                     android:gravity="center"
                     app:tabBackground="@color/white"
                     app:tabGravity="fill"
                     app:tabIndicatorColor="@android:color/transparent"
                     app:tabMode="fixed"
                     app:tabPaddingEnd="0dp"
                     app:tabPaddingStart="0dp"
                     app:tabSelectedTextColor="@color/black"
                     app:tabTextColor="@color/dimgray" />-->

                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/top_layout" />


            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>


</FrameLayout>
